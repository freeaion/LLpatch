# path to linux kernel source tree
KLP_BUILD = {{PATH_TO_LINUX_KERNEL_SOURCE_TREE}}
# name of livepatch module
KLP_NAME = {{NAME_OF_LIVEPATCH}}

# this makefile assumes that both klp_patch.o and livepatch.c are already
# created/generated by llpatch script by calling 'livepatch' command.
# Hence, following rule don't need to be modified.
obj-m += $(KLP_NAME).o

ldflags-y += -T $(src)/livepatch.lds

$(KLP_NAME)-objs += klp_patch.o livepatch.o

all:
	make -C $(KLP_BUILD) M=$(PWD) modules

clean:
	$(RM) $(KLP_NAME).ko $(KLP_NAME).mod.c $(KLP_NAME).mod.o \
	$(KLP_NAME).o Module.symvers modules.order livepatch.o
